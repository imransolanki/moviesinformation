<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/navigation_bar_background_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom TextView font styles -->
    <style name="text_open_sans_bold">
        <item name="customFont1">@string/open_sans_bold</item>
    </style>

    <style name="text_open_sans_regular">
        <item name="customFont1">@string/open_sans_regular</item>
    </style>

    <style name="text_open_sans_extra_bold">
        <item name="customFont1">@string/open_sans_extra_bold</item>
    </style>

    <style name="text_open_sans_italic">
        <item name="customFont1">@string/open_sans_italic</item>
    </style>

    <style name="text_open_sans_light">
        <item name="customFont1">@string/open_sans_light</item>
    </style>

    <style name="text_open_sans_semi_bold">
        <item name="customFont1">@string/open_sans_semi_bold</item>
    </style>

    <style name="text_font_awesome">
        <item name="customFont1">@string/font_awesome</item>
    </style>

</resources>